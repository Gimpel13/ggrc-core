<h3>
  Saved Searches
  <spinner-component toggle:from="isLoading"></spinner-component>
</h3>

<ul>
  {{#each searches}}
    <li class="{{#if isLoading}}disabled{{/if}}"}>
      <div on:el:click="selectSearch(.)"
        class="saved-search-item {{#if isSelectedSearch(.)}}applied{{/if}}">
          <span class="saved-search-item__title" title="{{name}}">
            {{name}}
          </span>

          {{#is(searchType, 'AdvancedSearch')}}
            {{#permalinkBuilder .}}
              <clipboard-link text:from="permalink" on:el:click="copyLink">
                <i class="fa fa-link"></i>
              </clipboard-link>
            {{/permalinkBuilder}}
          {{/is}}

          <i class="fa fa-trash" on:el:click="removeSearch(., scope.event)"></i>
      </div>
    </li>
  {{/each}}
</ul>

{{#if isPagingShown}}
  <tree-pagination
    paging:from="searchesPaging"
  ></tree-pagination>
{{/if}}
